<body>
    <!-- Splash Screen -->
    <div class="splash" id="splash">
        <img src="https://via.placeholder.com/150?text=NS" alt="NS Logo">
        <h1>NS Chat</h1>
    </div>

    <!-- Header -->
    <header>
        <h1>NS Chat</h1>
        <small>Pembuat: Fenwi</small>
    </header>

    <!-- Auth Section -->
    <div id="authSection">
        <h2>Daftar/Masuk</h2>
        <input type="text" id="userName" placeholder="Masukkan nama Anda">
        <button onclick="registerUser()">Daftar & Masuk</button>
    </div>

    <!-- Menu Section -->
    <div id="menuSection" style="display: none;">
        <h2>Pilih Opsi</h2>
        <button onclick="openSingleChat()">Chat Pribadi</button>
        <button onclick="openGroupChat()">Buat/Gabung Grup</button>
        <button onclick="openStorySection()">Lihat/Kirim Story</button>
    </div>

    <!-- Chat Section -->
    <div id="chatSection">
        <div id="chatHeader">
            <h3 id="chatTitle">Chat Pribadi</h3>
            <input type="text" id="targetName" placeholder="Nama Tujuan/Grup" style="width: 80%; margin: 10px 0;">
            <button onclick="setChatTarget()">Set Tujuan</button>
        </div>
        <div id="messages"></div>
        <div id="chatInput">
            <input type="text" id="messageText" placeholder="Ketik pesan...">
            <button onclick="sendMessage()">Kirim</button>
        </div>
    </div>

    <!-- Story Section -->
    <div id="storySection">
        <h2>NS Stories</h2>
        <div id="storyUpload">
            <input type="file" id="storyFile" accept="image/*,video/*">
            <button onclick="uploadStory()">Unggah Story</button>
        </div>
        <div id="storiesContainer"></div>
    </div>

    <!-- Footer -->
    <footer>
        &copy; 2026 NS Chat | Dibuat oleh Fenwi
    </footer>

    <script>
        // Data Storage
        let currentUser = "";
        let currentTarget = "";
        let chats = JSON.parse(localStorage.getItem("nsChats")) || {};
        let stories = JSON.parse(localStorage.getItem("nsStories")) || [];

        // Splash Screen
        window.onload = () => {
            setTimeout(() => {
                document.getElementById("splash").classList.add("hide");
            }, 3000); // Tampil 3 detik
        };

        // Register User
        function registerUser() {
            const name = document.getElementById("userName").value.trim();
            if (!name) {
                alert("Masukkan nama Anda terlebih dahulu!");
                return;
            }
            currentUser = name;
            localStorage.setItem("nsCurrentUser", name);
            document.getElementById("authSection").style.display = "none";
            document.getElementById("menuSection").style.display = "block";
        }

        // Open Chat Options
        function openSingleChat() {
            document.getElementById("chatTitle").textContent = "Chat Pribadi";
            document.getElementById("chatSection").style.display = "block";
            document.getElementById("menuSection").style.display = "none";
            document.getElementById("storySection").style.display = "none";
            loadMessages();
        }

        function openGroupChat() {
            document.getElementById("chatTitle").textContent = "Chat Grup";
            document.getElementById("chatSection").style.display = "block";
            document.getElementById("menuSection").style.display = "none";
            document.getElementById("storySection").style.display = "none";
            loadMessages();
        }

        function setChatTarget() {
            currentTarget = document.getElementById("targetName").value.trim();
            if (!currentTarget) {
                alert("Masukkan nama tujuan atau grup!");
                return;
            }
            loadMessages();
        }

        // Chat Functions
        function loadMessages() {
            const messagesDiv = document.getElementById("messages");
            messagesDiv.innerHTML = "";
            const chatKey = `${currentUser}-${currentTarget}` || currentTarget;
            const chatHistory = chats[chatKey] || [];
            
            chatHistory.forEach(msg => {
                const msgDiv = document.createElement("div");
                msgDiv.className = msg.sender === currentUser ? "message myMessage" : "message otherMessage";
                msgDiv.innerHTML = `<strong>${msg.sender}:</strong> ${msg.text}`;
                messagesDiv.appendChild(msgDiv);
            });
            messagesDiv.scrollTop = messagesDiv.scrollHeight;
        }

        function sendMessage() {
            const text = document.getElementById("messageText").value.trim();
            if (!text || !currentTarget) return;
            
            const chatKey = `${currentUser}-${currentTarget}` || currentTarget;
            if (!chats[chatKey]) chats[chatKey] = [];
            
            const message = {
                sender: currentUser,
                text: text,
                time: new Date().toLocaleTimeString()
            };
            
            chats[chatKey].push(message);
            localStorage.setItem("nsChats", JSON.stringify(chats));
            document.getElementById("messageText").value = "";
            loadMessages();
        }

        // Story Functions
        function openStorySection() {
            document.getElementById("storySection").style.display = "block";
            document.getElementById("menuSection").style.display = "none";
            document.getElementById("chatSection").style.display = "none";
            loadStories();
        }

        function uploadStory() {
            const fileInput = document.getElementById("storyFile");
            const file = fileInput.files[0];
            if (!file) {
                alert("Pilih foto/video terlebih dahulu!");
                return;
            }

            // Baca file dan simpan sebagai URL (untuk HD)
            const reader = new FileReader();
            reader.onload = function(e) {
                const story = {
                    id: Date.now(),
                    sender: currentUser,
                    url: e.target.result,
                    type: file.type.split("/")[0],
                    time: new Date().toLocaleString()
                };
                stories.push(story);
                localStorage.setItem("nsStories", JSON.stringify(stories));
                loadStories();
                fileInput.value = "";
            };
            reader.readAsDataURL(file);
        }

        function loadStories() {
            const container = document.getElementById("storiesContainer");
            container.innerHTML = "";
            stories.forEach(story => {
                const item = document.createElement("div");
                item.className = "storyItem";
                if (story.type === "image") {
                    item.innerHTML = `
                        <img src="${story.url}" alt="Story ${story.sender}">
                        <p><strong>${story.sender}</strong><br>${story.time}</p>
                    `;
                } else {
                    item.innerHTML = `
                        <video controls src="${story.url}" type="${story.type}/mp4"></video>
                        <p><strong>${story.sender}</strong><br>${story.time}</p>
                    `;
                }
                container.appendChild(item);
            });
        }

        // Auto Login
        window.onload = () => {
            setTimeout(() => {
                document.getElementById("splash").classList.add("hide");
            }, 3000);

            const savedUser = localStorage.getItem("nsCurrentUser");
            if (savedUser) {
                currentUser = savedUser;
                document.getElementById("authSection").style.display = "none";
                document.getElementById("menuSection").style.display = "block";
            }
        };
    </script>
</body>
</html>
